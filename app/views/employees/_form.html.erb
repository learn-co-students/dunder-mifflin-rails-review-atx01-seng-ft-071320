<h1>I'll be a form </h1>


<%= form_for @employee  do |f| %>
  <% if @employee.errors.any? %>
    <h2>There were some errors:</h2>
    <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br />
  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br>
  <br>
  <%= f.label :alias %>
  <%= f.text_field :alias %>
  <br>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :office %>
  <%= f.text_field :office %>
  <br>
  <br>
  <%= f.label :dog %>
  <%= f.collection_select :dog_id, Dog.all, :id, :name %>
  <br><br>
  <%= f.submit %>
<% end %>